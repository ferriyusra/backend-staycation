<!-- DataTales Example -->
<div class="card shadow mb-4 mt-1">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Data Booking</h6>
    <a href="/admin/booking" class="btn btn-warning">Back</a>
  </div>
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Data Activity</h6>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img
          src="http://localhost:3000/<%= booking.payments.proofPayment %>"
          alt="image"
          style="width: 100%; display: block"
        />
      <div class="row ml-1">
          <% if (booking.payments.status == 'Prosses') { %>
           
            <form
                action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT"
                method="POST"
            >
            </a>
                <button type="submit" class="btn btn-success btn-md">
                <i class="fas fa-check"></i>
                Confirmation
                </button>
            </form>
            <form
            action="/admin/booking/<%= booking.id %>/reject?_method=PUT"
            method="POST"
            class="ml-2"
            >
            </a>
                <button type="submit" class="btn btn-danger btn-md">
                    <i class="fas fa-times"></i>
                    Reject
                </button>
            </form>
          <% } %>
      </div>
    </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTableActivity"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>Name member</th>
                <th>Total</th>
                <th>Bank from</th>
                <th>Title</th>
              </tr>
            </thead>
            <tbody>
             <tr>
                 <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                 <td>$ <%= booking.total %></td>
                 <td><%= booking.payments.bankFrom %></td>
                 <td><%= booking.itemId.title %></td>
             </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
